<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to omniauth_authorize_path(resource_name, provider), class: 'btn btn-block' do %>
        <i class="fa fa-facebook fa-2x"></i>
        |Connecte-toi avec <br> Facebook
      <% end %>
  <% end -%>
<% end -%>
