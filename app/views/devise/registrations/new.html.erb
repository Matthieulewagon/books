<h3 class="sign-up-chgt">Inscris-toi : vends et achète des livres étudiants bon marché sur ton campus !</h3>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= f.error_notification %>

<div class="row">
  <div class="col-xs-12 col-lg-6">
    <div class= "form-sign-campus"><%= f.select :campus,
     ["Louvain la Neuve", "Saint Louis", "ULB"],
     include_blank: 'Choisis ton Campus' %>
   </div>
   <div class="form-inputs form-margin">
     <%= f.input :first_name, required: true, label: "Prénom"%>
     <%= f.input :last_name, required: true, label: "Nom"%>
     <%= f.input :email, required: true, autofocus: true, :pattern => '[^@]+@[^@]+\.[a-zA-Z]{2,6}' %>
     <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
     <%= f.input :password_confirmation, required: true %>
   </div>
   <div class="form-actions form-margin">
     <%= f.button :submit, "Sign up", class: "btn-darkgreen" %>
     </div>
     <div class="form-margin-log"><%= render "devise/shared/links" %></div>
 </div>
 <div class="col-xs-12 col-lg-6">
  <div class="form-inputs form-margin">
    <div class="tip_typo"><%= " Tip: Rentre en contact avec les autres grâce au(x) moyen(s) que tu choisis !" %></div>
    <%= f.input :facebook, label: "facebook profile url"%>
    <%= f.input :whatsapp, label: "whatsapp url"%>
    <%= f.input :gsm, label: " " + "Gsm", length: {minimum: 5, maximum: 5}%>
  </div>
</div>
<% end %>
</div>
