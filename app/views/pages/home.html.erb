<div class="homepage-content">
  <div class="homepage-photo" style="background-image: url('https://static.pexels.com/photos/94356/pexels-photo-94356.jpeg');">

    <h1 class="head-home">Optimise ton temps et ton argent sur SweatDeal votre platforme de livres etudiants! </h1>

    <div class="row">
  <div class="col l4">
    <%= simple_form_for Book.new, url: books_path, html: { method: :get } do |f| %>
    <%= f.select :campus,
          ["Louvain la Neuve", "Saint Louis", "ULB"],
          include_blank: 'Choisi ton Campus' %>
    <%= simple_form_for Book.new, url: books_path, html: { method: :get } do |f| %>
    <%= f.select :year,
          ["1 année bac", "2 année bac", "3 année bac", "1 année master", "2 année master"],
          include_blank: "Choisi l'année" %>
    <%= f.submit "Search", class: 'btn btn-home' %>
    <% end %>
    <% end %>
  </div>
  </div>
  </div>
</div>
