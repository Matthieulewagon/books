<h1 class="sign-up-chgt">Insérer annonce Livre</h1>
<div class="container">
 <div class="row">
  <div class="col l4">
    <%= simple_form_for Book.new, url: books_path, html: { method: :get } do |f| %>
    <%= f.select :campus,
          ["@{user.campus}", "Louvain la Neuve", "Saint Louis", "ULB"],
          include_blank: 'Choisis le Campus' %>
    <%= f.select :year,
          ["1 année bac", "2 année bac", "3 année bac", "1 année master", "2 année master"],
          include_blank: "Choisis l'année" %>
    <%= f.input :title, required: true, label: "Titre", placeholder: "Titre du livre ex: 'droit constitutionelle'"%>
    <%= f.input :description, required: true, label: "Etat", placeholder: "Description courte de l'état du livre"%>
    <%= f.input :price, required: true, label: "Etat", placeholder: "Prix du livre, ex: 35"%>
    </div>


    <%= f.submit "Creer l'annonce", class: 'btn btn-home' %>
  <% end %>
  </div>
</div>

