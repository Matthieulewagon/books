<div class="container">
  <div class="row">
  <div class="col l4 search-books">

    <span><%= simple_form_for Book.new,  url: books_path , :method => :get do |f| %>
      <%= f.input :title, :autofocus => true, placeholder: "Taper le nom du livre recherché"%></span>

    <span><%= simple_form_for Book.new, url: books_path, html: { method: :get } do |f| %>
      <% if @books[0] != nil %>
      <%= f.select :campus,
          [@books[0].campus]
          %></span>
      <% else%>
      <%= f.select :campus,
          ["Louvain la Neuve", "Saint Louis", "ULB"],
          include_blank: 'Choisis ton Campus' %><% end %>
    <span><%= simple_form_for Book.new, url: books_path, html: { method: :get } do |f| %>
      <% if @books[0] != nil %>
      <%= f.select :year,
         [@books[0].year]%></span>
      <% else%>
      <%= f.select :year,
          ["1 année bac", "2 année bac", "3 année bac", "1 année master", "2 année master"],
          include_blank: "Choisis l'année" %><% end %>



  <span class="btn-search"><%= f.submit "Search", class: "btn btn-darkgreen"%></span>
  </div>
  <% end %>
  <% end %>
  <% end %>
  </div>
    <!-- <div class="col-md-6"> -->
    <% @books.each do |book| %>
      <div class="card">
        <div class="card-left">
          <a href="http://lorempixel.com/850/850/?random=123">
             <img class="img-size" alt title src="http://lorempixel.com/850/850/?random=123" scale="0"></a>
        </div>
        <div class="card-right full">
          <a class="text-title">"<%= book.title %>"</a>
          <div class="tag-price">
            <p><%= book.price %>€</p>
          </div>
            <p class="text-loaction"><span><%= book.campus %></span>
            <span class="span"><%= book.year %></span><span class="span">Created <%= time_ago_in_words(book.created_at) %> ago.</span></p>
            <p><%= book.description %></p>
        </div>
      </div>
     <% end %>

  </div>
</div>


